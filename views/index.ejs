<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini Whatsapp</title>
    <link rel="stylesheet" href="/style.css">
    <script src="/main.js" defer></script>
</head>
<body>
    <div class="container">
        <h3>All Chats</h3>
        <form method="GET" action="/chats/new">
            <button class="new-chat-btn">New chat</button>
        </form>
        <br>
        <% for (let chat of chats) { %>
            <div class="chat">
                <p class="chat-info">From: <i><%= chat.from %></i></p>
                <div class="msg">
                    <p><%= chat.msg %></p>
                    <div class="chat-actions">
                        <form method="GET" action="/chats/<%= chat.id %>/edit">
                            <button class="edit-btn">Edit</button>
                        </form>
                        <form method="POST" action="/chats/<%= chat.id %>?_method=DELETE">
                            <button class="delete-btn">Delete</button>
                        </form>
                    </div>
                </div>
                <p class="chat-info">Received by <i><%= chat.to %></i></p>
                <hr>
                <p class="chat-timestamp"><%= chat.created_at.toString().split(" ")[4] %> <br></p>
                <p class="chat-date"><%= chat.created_at.toString().split(" ").slice(0, 4).join("-") %> <br></p>
            </div>
            <br><br>
        <% } %>
    </div>
</body>
</html>
